<%= form_tag "/login", :class=>"login-form" do %>
<div class="cred-container login-email">
<%= text_field_tag 'email', nil, :placeholder => 'email' %>
</div>

<div class="cred-container login-password">
<%= password_field_tag 'password', nil, :placeholder => 'password' %>
</div>  

<% if @errors.present? %>
    <div id="error">
        <p><%= @errors %></p>
    </div>
  <% end %>

<%= submit_tag("Login") %>
<% end %>