<%= form_tag "/login" do %>
<div class="cred-container">
<%= label_tag("Email") %>
<%= text_field_tag 'email', nil, :placeholder => 'test@email.com' %>
</div>

<div class="cred-container">
<%= label_tag("Password") %>
<%= password_field_tag 'password', nil, :placeholder => '************' %>
</div>  

<% if @errors.present? %>
    <div id="error">
        <p><%= @errors %></p>
    </div>
  <% end %>

<%= submit_tag("Login") %>
<% end %>