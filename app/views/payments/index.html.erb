<p id="notice"><%= notice %></p>

<h1>Payments Due</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Recipient</th>
      <th>Amount</th>
      <th>Type</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sender_payments.each do |payment| %>
      <tr>
        <td><%= payment.title %></td>
        <td><%= payment.recipient_id %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.type_id %></td>
        <td><%= payment.note %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

