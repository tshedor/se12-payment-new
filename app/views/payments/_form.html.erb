<% content_for :body_class, "payment-new" %>
<%= form_for(@payment) do |f| %>

  <div class="field form-group">
    <%= f.label :sender_id %>
    <%= f.collection_select :sender_id, User.all, :id, :first_name, { :include_blank=> true }, { :class=>"form-control" } %>
  </div>
  <div class="field form-group">
    <%= f.label :recipient_id %><br>
    <%= f.collection_select :recipient_id, User.all, :id, :first_name, { :include_blank=> true }, { :class=>"form-control" } %>
  </div>
  <div class="field form-group">
    <%= f.label :amount %><br>
    <%= f.text_field :amount, :class=>"form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :note %><br>
    <%= f.text_area :note, :class=>"form-control" %>
  </div>
  <div class="actions form-group">
    <%= f.submit 'Create',  :class=>"btn btn-default" %>
  </div>
<% end %>
  <% flash.each do |type, messages| %>
    <div class="alert <%= bootstrap_class_for(type) %> fade in error-message">
      <% messages.each do |message| %>
        <ul class="errors">
          <li><%= message %></li>
        </ul>
      <% end %>
    </div>
  <% end %>